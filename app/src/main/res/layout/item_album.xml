<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/linearcarviewalbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:id="@+id/imageviewalbum"
                android:layout_width="200dp"
                android:layout_height="200dp">
            </ImageView>
            <!--                android:src="@drawable/vietnam"-->


            <TextView
                android:textColor="@color/primaryTitleColor"
                android:maxWidth="200dp"
                android:textSize="20sp"
                android:id="@+id/textviewtenalbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="center"
                android:text="Ngày xuân long phụng xum vầy"/>
            <TextView
                android:layout_gravity="center"
                android:textColor="#9E9797"
                android:textSize="15sp"
                android:maxWidth="200dp"
                android:text="Noo Phước Thịnh"
                android:ellipsize="end"
                android:id="@+id/textviewtencasialbum"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>